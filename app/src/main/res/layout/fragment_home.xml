<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".HomeFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/dashboard_gradient"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dashboard_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_welcome"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Welcome User"
            android:textColor="@color/white"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14" />


        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="70dp"
            android:layout_height="61dp"
            android:layout_marginStart="92dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_settings"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_welcome"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/dashboard_grid"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_24sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:useDefaultMargins="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pensioneers"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_16ssp"
                    android:text="Total Pensioneers"
                    />
                <TextView
                    android:id="@+id/tv_total_pensioneers_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_48ssp"
                    android:textFontWeight="600"
                    android:text="15"
                    />
                <TextView
                    android:id="@+id/tv_last_updated_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGrey"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_12ssp"
                    android:text="Last Updated Date"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_total_verified_pensioneers"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_16ssp"
                    android:text="Total Verified Pensioneers"
                    />
                <TextView
                    android:id="@+id/tv_total_verified_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_48ssp"
                    android:textFontWeight="600"
                    android:text="15"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_unverified_pensioneers"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_16ssp"
                    android:text="Total UnVerified Pensioneers"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_48ssp"
                    android:textFontWeight="600"
                    android:text="15"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_total_pending_pensioneers"
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_16ssp"
                    android:text="Total Pending Pensioneers"
                    />
                <TextView
                    android:id="@+id/tv_total_pending_pensioneers_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_48ssp"
                    android:textFontWeight="600"
                    android:text="15"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>