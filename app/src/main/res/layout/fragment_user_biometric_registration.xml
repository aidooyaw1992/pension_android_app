<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_details_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    tools:context=".UserBiometricRegistrationFragment">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="@dimen/_8sdp">
        <TextView
            android:id="@+id/details_full_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            style="@style/TitleTextStyle"
            />
        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/details_full_name_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="value"/>
    </LinearLayout>
    <Space
        android:id="@+id/full_name_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/name_layout"
        />
    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/full_name_space"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="@dimen/_8sdp">
        <TextView
            android:id="@+id/details_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            style="@style/TitleTextStyle"
            />
        <Space
            android:layout_width="@dimen/_8sdp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/details_description_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="value"/>
    </LinearLayout>

    <Space
        android:id="@+id/description_space"
        app:layout_constraintTop_toBottomOf="@id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enrol"
        android:textFontWeight="700"
        app:layout_constraintTop_toBottomOf="@id/description_space"
        android:layout_width="match_parent"
        android:text="Enrol Biometric"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/enrol_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_enrol"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        android:background="@color/grey"
        android:layout_marginBottom="@dimen/_48sdp"
        android:layout_marginTop="@dimen/_48sdp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:text="Register Pension"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>